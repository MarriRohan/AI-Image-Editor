FROM python:3.11-slim
WORKDIR /app
RUN apt-get update && apt-get install -y --no-install-recommends libgl1 libglib2.0-0 && rm -rf /var/lib/apt/lists/*
COPY api/ ./api/
COPY ml/ ./ml/
COPY docs/ ./docs/
RUN pip install --no-cache-dir fastapi uvicorn[standard] sqlalchemy pydantic PyJWT requests opencv-python-headless numpy ultralytics easyocr
EXPOSE 8000
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
